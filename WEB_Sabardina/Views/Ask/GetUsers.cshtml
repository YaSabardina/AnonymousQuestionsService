@model IEnumerable<WEB_Sabardina.Models.UserViewModel>

@{
    ViewBag.Title = "GetUsers";
}

<h2>Люди</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Посмотреть профиль", "DetailsUser", new { id = item.Id }) |
            @Html.ActionLink("Написать вопросик", "CreateQuestion", new { id = item.Id }) |

        </td>
    </tr>
}

</table>
