@model WEB_Sabardina.Models.ProfUserViewModel


<div>
    <h1>@Model.User.Name</h1>
    <h2>@Model.User.Email</h2>
    @if (Model.Asks.Count > 0)
    {
        <h4>Вопросики</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Вопрос</th>
                    <th scope="col">Ответ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Asks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Question)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Answer)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <dl class="dl-horizontal">
        </dl>
    }

    <p>
        @Html.ActionLink("Back to List", "GetUsers")
    </p>
</div>

